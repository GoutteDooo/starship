--waves

function draw_wave()
	if wave[level] <= 0 then
		print("wave",60,60)
		print(level+1,80,60)
		enemies={}
	end
end

function update_wave()
	if wave[level] <= 0 then
		timer_wave -=1
		if timer_wave <= 0 then
			timer_wave = 60
			level +=1
		end
	end
end
