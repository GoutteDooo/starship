--enemies

function spawn_enemies(amount)
	gap=(128-8*amount)/(amount+1)
 for i=1,amount do
	 new_enemy={
			x=gap*i+8*i-1,
			y=-8,
			hp=30,
			speed=0.3
			}
			add(enemies,new_enemy)
 end
end

function update_enemies()
	--spawn
	if #enemies==0 then
		if wave[level] < 7 then
			spawn_enemies(wave[level])
		else
		 spawn_enemies(ceil(rnd(4)+3))
		end
	end
	for e in all(enemies) do
		e.y+=e.speed
		if e.y>128 then
			kill_enemy(e)
		end
		--collisions
		for b in all(all_bullets) do
			if collision(e,b) then
				del(all_bullets,b)
				e.hp-=1
				create_explosion(b.x+4,b.y+2)
				if e.hp<=0 then
					sfx(2)
				 kill_enemy(e)
				 score+=10
				end
			end
		end
	end
end

function kill_enemy(e)
	del(enemies,e)
	wave[level] -=1
end
